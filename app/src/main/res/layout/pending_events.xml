<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/id_eventcardView"

    android:orientation="horizontal"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardUseCompatPadding="true">


    <View
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:background="#6200EA"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:paddingLeft="15dp"
        android:background="@drawable/card_edge"
        android:id="@+id/id_eventcardLayout"
        android:orientation="vertical"
        android:paddingStart="15dp">

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text=" EVENT NAME"
            android:layout_margin="3dp"
            android:textColor="#6200EA"
            android:textSize="18sp" />



        <TextView
            android:text=" COLLEGE"
            android:gravity="center_vertical"
            android:layout_margin="3dp"
            android:id="@+id/id_coll_name"
            android:drawablePadding="10dp"
            android:textColor="#A52217"
            android:drawableLeft="@drawable/college"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />




        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <TextView
                android:text=" COORDINATOR"
                android:gravity="center_vertical"
                android:layout_margin="3dp"
                android:drawablePadding="10dp"
                android:textColor="#000000"
                android:drawableLeft="@drawable/ic_account_circle_black_24dp"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" ADAM"
                android:gravity="center_vertical"
                android:layout_margin="3dp"
                android:textColor="#970606"
                android:id="@+id/id_coordinator_name"
                android:drawablePadding="10dp"
                android:layout_weight="1.3"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <TextView
                android:text=" DEPARTMENT"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_security_black_24dp"
                android:layout_margin="3dp"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" ECE"
                android:gravity="center_vertical"
                android:id="@+id/id_deptartment"
                android:textColor="#970606"
                android:drawablePadding="10dp"
                android:layout_margin="3dp"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <TextView
                android:text=" PHONE"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_call_black_24dp"
                android:textColor="#000000"
                android:layout_margin="3dp"
                android:drawablePadding="10dp"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content" />
            <TextView
                android:text=" 1000000000"
                android:gravity="center_vertical"
                android:textColor="#970606"
                android:layout_margin="3dp"
                android:drawablePadding="10dp"
                android:id="@+id/id_phoneno"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:weightSum="2">

            <TextView
                android:text=" CITY"
                android:gravity="center_vertical"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:layout_margin="3dp"
                android:drawablePadding="10dp"
                android:textColor="#000000"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="wrap_content" />

            <TextView
                android:text=" TRICHY"
                android:gravity="center_vertical"
                android:textColor="#970606"
                android:layout_margin="3dp"
                android:drawablePadding="10dp"
                android:id="@+id/id_eventcity"
                android:layout_width="0dp"
                android:layout_weight="1.1"
                android:layout_height="wrap_content" />
        </LinearLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>