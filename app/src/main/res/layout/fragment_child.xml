                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:padding="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.7"
                                    android:typeface="monospace"
                                    android:layout_height="wrap_content"
                                    android:textColor="#A52217"
                                    android:text="Category"/>
                                <TextView
                                    android:id="@+id/id_category"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.3"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:text="Annual Socio-Cultural Festival"/>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:padding="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0dp"
                                    android:typeface="monospace"
                                    android:layout_weight="0.7"
                                    android:layout_height="wrap_content"
                                    android:textColor="#A52217"
                                    android:text="Organiser"/>
                                <TextView
                                    android:id="@+id/id_organiser"
                                    android:layout_width="0dp"
                                    android:layout_weight="1.3"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:text="IIT BHU"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:padding="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.7"
                                    android:typeface="monospace"
                                    android:layout_height="wrap_content"
                                    android:textColor="#A52217"
                                    android:text="City"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.3"
                                    android:id="@+id/id_city"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:text="Varanasi"/>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:padding="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.7"
                                    android:typeface="monospace"
                                    android:layout_height="wrap_content"
                                    android:textColor="#A52217"
                                    android:text="State"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.3"
                                    android:id="@+id/id_state"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:text="Uttar Pradesh"/>

                                </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="2"
                                android:padding="5dp"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="0.7"
                                    android:typeface="monospace"
                                    android:layout_height="wrap_content"
                                    android:textColor="#A52217"
                                    android:text="Conducted by"/>
                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_weight="1.3"
                                    android:id="@+id/id_cond_dept"
                                    android:layout_height="wrap_content"
                                    android:textColor="#000000"
                                    android:text="EEE Dept"/>

                            </LinearLayout>
                            <TextView
                                android:id="@+id/regview"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:fontFamily="serif"
                                android:layout_marginTop="30dp"
                                android:text="APPLY NOW"/>
                        </LinearLayout>
                        -
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/btmLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/gp40" />

        <TextView
            android:id="@+id/bottomtext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Student Bazaar"
            android:textColor="#A52217"
            android:textStyle="bold" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="55dp"
        android:layout_height="wrap_content"
        android:id="@+id/bottombtnlayout"
        android:weightSum="2">

        <Button
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/btnleft"
            android:drawableRight="@drawable/ic_share_pink_24dp"
            android:gravity="center"

            android:layout_marginEnd="5dp"
            android:paddingEnd="40dp"
            android:text="SHARE "
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginRight="5dp"
            android:paddingRight="40dp" />


        <Button
            android:id="@+id/read_more"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:background="@drawable/btnleft"
            android:drawableStart="@drawable/ic_infodp"
            android:gravity="center"
            android:paddingStart="30dp"
            android:text=" MORE"
            android:textColor="#000000"
            android:textSize="15dp"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_infodp"
            android:paddingLeft="30dp" />

        <TextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:visibility="gone" />

    </LinearLayout>




