<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:id="@+id/id_avatar"
        android:layout_marginTop="10dp"
        android:src="@drawable/avatar_new"
        android:layout_height="200dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/id_avatar"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:typeface="monospace"
                android:textColor="#000000"
                android:layout_weight="0.7"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ismail"
                android:textSize="20dp"
                android:id="@+id/id_name"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textColor="#A80707"
                android:layout_weight="1.3"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="7dp"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Degree"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:typeface="monospace"
                android:textColor="#000000"
                android:layout_weight="0.7"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="BE"
                android:id="@+id/id_degree"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textColor="#A80707"
                android:layout_weight="1.3"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Dpt"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:typeface="monospace"
                android:textColor="#000000"
                android:layout_weight="0.7"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="CSE"
                android:textSize="20dp"
                android:id="@+id/id_dept"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textColor="#A80707"
                android:layout_weight="1.3"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="College"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:typeface="monospace"
                android:textColor="#000000"
                android:layout_weight="0.7"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Anna University"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:id="@+id/id_college_name"
                android:textColor="#A80707"
                android:layout_weight="1.3"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:typeface="monospace"
                android:textColor="#000000"
                android:layout_weight="0.7"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ismail@gmail.com"
                android:textSize="20dp"
                android:id="@+id/id_email"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textColor="#A80707"
                android:layout_weight="1.3"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="7dp"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Phone"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:typeface="monospace"
                android:textColor="#000000"
                android:layout_weight="0.7"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="1000000000"
                android:id="@+id/id_phone"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textColor="#A80707"
                android:layout_weight="1.3"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Semester"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:typeface="monospace"
                android:textColor="#000000"
                android:layout_weight="0.7"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ismail"
                android:id="@+id/id_semester"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:textColor="#A80707"
                android:layout_weight="1.3"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Year"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:typeface="monospace"
                android:textColor="#000000"
                android:layout_weight="0.7"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ismail"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/id_year"
                android:paddingStart="10dp"
                android:textColor="#A80707"
                android:layout_weight="1.3"
                android:paddingLeft="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="7dp"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Batch"
                android:textSize="20dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:typeface="monospace"
                android:textColor="#000000"
                android:layout_weight="0.7"
                android:paddingLeft="10dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ismail"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/id_batch"
                android:paddingStart="10dp"
                android:textColor="#A80707"
                android:layout_weight="1.3"
                android:paddingLeft="10dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:background="#000000"
        android:id="@+id/id_done"
        android:textColor="@android:color/holo_green_light"
        android:layout_height="wrap_content"
        android:text="DONE"/>

</RelativeLayout>