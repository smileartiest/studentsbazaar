<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ProfileActivity">

    <View
        android:id="@+id/uiviewprofile"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/uitvtxtprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="25sp"
        android:text="Profile"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/uicvprofileview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="170dp"
        android:layout_marginRight="50dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:paddingLeft="25sp"
            android:paddingRight="25sp">

            <TextView
                android:id="@+id/uitvprofileusername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:text="Ajith kumar"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/uitvprofileemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="babulakshmi691@gmail.com"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uitvprofileusername"

                />

            <TextView
                android:id="@+id/uitvprofilememes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_arrow_right_black_"
                android:gravity="center_vertical"
                android:text="Memes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uitvprofileemail" />

            <TextView
                android:id="@+id/uitvprofileevnets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_arrow_right_black_"
                android:gravity="center"
                android:text="My Events"
                android:drawableLeft="@drawable/ic_event_available_black_24dp"
                android:padding="5dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uitvprofilememes" />

            <TextView
                android:id="@+id/uitvprofil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_arrow_right_black_"
                android:gravity="center"
                android:text="My Memes"
                android:drawableLeft="@drawable/ic_newmeme"
                android:textStyle="bold"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uitvprofileemail" />

            <TextView
                android:id="@+id/uitvprofilequiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_arrow_right_black_"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
                android:text="Quiz Status"
                android:padding="5dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uitvprofileevnets" />

            <TextView
                android:id="@+id/uitvprofilelogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/shape"
                android:drawableRight="@drawable/ic_arrow_right_black_"
                android:gravity="center"
                android:textStyle="bold"
                android:padding="5dp"
                android:text="Logout"
                android:drawableLeft="@drawable/ic_logout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/uitvprofilequiz" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp">

        <ImageView
            android:id="@+id/uiivprofileimg"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_rec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/uitvprofileinitial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textSize="40sp"
            android:typeface="serif"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/uiivprofileimg"
            app:layout_constraintEnd_toEndOf="@+id/uiivprofileimg"
            app:layout_constraintTop_toTopOf="@+id/uiivprofileimg"
            app:layout_constraintBottom_toBottomOf="@+id/uiivprofileimg"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/uiivprofileback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_backspace_black_24dp"
       app:layout_constraintTop_toBottomOf="@+id/uicvprofileview"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toStartOf="@+id/uibtnprofileedit"
        android:background="@drawable/shape"

        />
    <Button
        android:id="@+id/uibtnprofileedit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/uicvprofileview"
        android:layout_marginTop="50dp"
        android:background="@drawable/button"
        android:text="Edit"
        android:elevation="10dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAllCaps="false"
        app:layout_constraintStart_toEndOf="@+id/uiivprofileback"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/iconnew"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="StudentsBazaar"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>