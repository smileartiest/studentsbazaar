<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".activity.HomeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_below="@+id/head_title"
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:id="@+id/img_slider"
                android:paddingStart="20dp"
                android:paddingLeft="20dp"
                android:paddingEnd="20dp"
                android:paddingRight="20dp"
                android:layout_height="200dp">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/vp_slider"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/ll_dots"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"></LinearLayout>
            </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_below="@+id/img_slider"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >


            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="2"
                android:id="@+id/linear2"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview2new"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivImageEvent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/event_new" />

                        <TextView
                            android:id="@+id/tvEventNew"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Event"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardviewtechnews"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    app:cardCornerRadius="10dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivImageEvent1"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/technews" />

                        <TextView
                            android:id="@+id/tvEventNew1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="Interesting Facts"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview5"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="#FFFFFC"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="10dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivMeme"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/aures" />

                        <TextView
                            android:id="@+id/tvMeme"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="AU Result"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview4"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="#FFFFFC"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivSylabus"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/mures" />

                        <TextView
                            android:id="@+id/tvSylabus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="MU Result"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvplaced"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:background="#FFFFFC"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivImagePlacement"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:src="@drawable/placement" />

                        <TextView
                            android:id="@+id/tvPlacement"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Placement"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cardview6"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="#FFFFFC"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivQuiz"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/news" />

                        <TextView
                            android:id="@+id/tvQuiz"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Quiz"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvdis"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="10dp"
                    android:background="#FFFFFC"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"

                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ivdis"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/memes" />

                        <TextView
                            android:id="@+id/tvdis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Memes"
                            android:textColor="#000000"
                            android:layout_marginTop="5dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/cvabut"
                    android:layout_width="0dp"
                    android:layout_height="170dp"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:background="#FFFFFC"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <ImageView
                            android:id="@+id/ivabout"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:src="@drawable/dis" />
                        <TextView
                            android:id="@+id/tvabout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Disclaimer"
                            android:layout_marginTop="5dp"
                            android:textColor="#000000"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>