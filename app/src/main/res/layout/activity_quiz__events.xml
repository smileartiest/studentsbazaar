<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activity.Quiz_Events">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/view_lay"
       android:layout_above="@id/submit_quiz"
       android:orientation="vertical">
   <androidx.appcompat.widget.Toolbar
       android:id="@+id/toolbar3"
       android:layout_width="match_parent"
       android:layout_height="40dp"
       android:background="?attr/colorPrimaryDark"
       android:minHeight="?attr/actionBarSize"
       android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
       app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

   </androidx.appcompat.widget.Toolbar>
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/quiz_view"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       />
   </LinearLayout>
   <Button
       android:layout_alignParentBottom="true"
       android:id="@+id/submit_quiz"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:background="@color/colorPrimary"
       android:textStyle="bold"
       android:textColor="#FFFFFF"
      android:text="Submit"/>
   <LinearLayout
       android:id="@+id/empty4"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       android:gravity="center"
       android:visibility="gone"
       android:layout_centerInParent="true">
      <ImageView
          android:layout_width="150dp"
          android:layout_height="150dp"
          android:background="@drawable/icon"
          />

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="No Question Today...!!! \n Already you attend the Quiz"
          android:textColor="@color/white"
          android:gravity="center"
          android:fontFamily="serif"
          android:textStyle="bold"/>



   </LinearLayout>

</RelativeLayout>